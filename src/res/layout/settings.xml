<?xml version="1.0" encoding="utf-8"?>
<com.theOldMen.view.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="2.0">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_height="250dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="30dp" >
            <com.theOldMen.CircleImage.CircleImageView
                android:layout_height="180dp"
                android:layout_width="180dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/hugh"
                android:id="@+id/setting_head"
                android:clickable="true" />
            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="用户"
                android:layout_marginTop="15dp"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="10dp">
            <RelativeLayout
                android:id="@+id/modify_name"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector" >
                <TextView
                    android:id="@+id/nick_position"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="昵称"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:duplicateParentState="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="12.0dp" />
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/comment_edit_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/base_horizontal_line" />
            <RelativeLayout
                android:id="@+id/modify_sex"
                android:layout_height="40.0dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="性别"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:duplicateParentState="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="12.0dp" />
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/comment_edit_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8.0dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/base_horizontal_line" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="150.0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10.0dp" >
            <RelativeLayout
                android:layout_height="40.0dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="显示离线好友"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:duplicateParentState="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="12.0dp" />
                <com.theOldMen.view.Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:checked="false"
                    android:id="@+id/showOfflineSwitch"
                    style="@style/Material.Widget.Switch"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8.0dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/base_horizontal_line" />
            <RelativeLayout
                android:layout_height="40.0dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="静音模式"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:duplicateParentState="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="12.0dp" />
                <com.theOldMen.view.Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:checked="false"
                    android:id="@+id/muteSwitch"
                    style="@style/Material.Widget.Switch"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8.0dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/base_horizontal_line" />
            <RelativeLayout
                android:layout_height="40.0dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="消息振动模式"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:duplicateParentState="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="12.0dp" />
                <com.theOldMen.view.Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:checked="false"
                    android:id="@+id/vibratorSwitch"
                    style="@style/Material.Widget.Switch"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8.0dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/base_horizontal_line" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="100.0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10.0dp" >
            <RelativeLayout
                android:id="@+id/about"
                android:layout_height="40.0dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="关于"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:duplicateParentState="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="12.0dp" />
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/common_arrow_right_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8.0dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/base_horizontal_line" />
            <RelativeLayout
                android:id="@+id/logout"
                android:layout_height="40.0dp"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/btn_selector" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="注销"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:duplicateParentState="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="12.0dp" />
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/common_arrow_right_selector"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8.0dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</com.theOldMen.view.ParallaxScrollView>