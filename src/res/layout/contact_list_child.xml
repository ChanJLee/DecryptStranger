<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/common_list_item_background"
    android:paddingTop="6.0dip"
    android:paddingBottom="6.0dip">

    <com.theOldMen.CircleImage.CircleImageView
        android:id="@+id/head"
        android:layout_height="50dip"
        android:layout_width="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:duplicateParentState="true"
        android:layout_marginLeft="10.0dip"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/contact_list_item_name"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_toRightOf="@id/head"
        android:ellipsize="end"
        android:gravity="left|center"
        android:duplicateParentState="true"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:textColor="@drawable/contact_list_item_buddy_name_text_color"
        android:textSize="16.0sp" />

    <TextView
        android:id="@+id/contact_list_item_state"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_alignParentRight="true"
        android:layout_below="@id/contact_list_item_name"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_toRightOf="@id/head"
        android:ellipsize="end"
        android:duplicateParentState="true"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:textColor="@drawable/contact_list_item_buddy_signature_text_color2"
        android:textSize="12.0sp" />

</RelativeLayout>